.college-steps{
	width:50%;
	margin: 1% auto;
	padding: .5%;
	background-color: white;
	border: 1px lightgrey solid;
	-moz-box-shadow: 5px 5px 2.5px #777777;
	-webkit-box-shadow: 5px 5px 2.5px #777777;
	box-shadow: 5px 5px 10px #777777;
	border-radius: 5px;
}
.new-step-form{
	width:50%;
	margin: 1% auto;
	padding: .5%;
	background-color: white;
	border: 1px lightgrey solid;
	-moz-box-shadow: 5px 5px 2.5px #777777;
	-webkit-box-shadow: 5px 5px 2.5px #777777;
	box-shadow: 5px 5px 10px #777777;
	border-radius: 5px;
}
.step{
	border-bottom: 1px grey solid;
	width: 90%;
	height: 30px;
}
.complete{
	text-decoration: line-through;
}

@media (max-width: 720px) {
  .college-steps {
    width: 85%;
  }
}

@media (max-width: 480px) {
  #content{
  	width: 98%;
  }
  .college-steps {
    width: 95%;
  }
}