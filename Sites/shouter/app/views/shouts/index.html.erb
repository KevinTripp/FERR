<h1>Listing shouts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shouts.each do |shout| %>
  <tr>
    <td><%= link_to shout.content, edit_shout_path(shout) %></td>
    <td><%= link_to shout.user.first_name, shout.user %></td>
    <td><%= link_to 'Destroy', shout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

