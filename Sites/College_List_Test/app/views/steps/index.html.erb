<h1>Listing steps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Due date</th>
    <th>Step type</th>
    <th>Complete</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.name %></td>
    <td><%= step.due_date %></td>
    <td><%= step.step_type_id %></td>
    <td><%= step.complete %></td>
    <td><%= link_to 'Show', step %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

